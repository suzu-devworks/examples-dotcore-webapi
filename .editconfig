# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.cs]
dotnet_sort_system_directives_first = true;
dotnet_separate_import_directive_groups = false;

[*.{yaml,tml,json}]
indent_size = 2
indent_style = space

[*.{sln,csproj}]
end_of_line = crlf
